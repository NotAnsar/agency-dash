generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Agency {
  id                String    @id @default(uuid())
  name              String
  state             String?
  state_code        String?
  type              String?
  population        Int?
  website           String?
  total_schools     Int?
  total_students    Int?
  mailing_address   String?
  grade_span        String?
  locale            String?
  csa_cbsa          String?
  domain_name       String?
  physical_address  String?
  phone             String?
  status            String?
  student_teacher_ratio Float?
  supervisory_union String?
  county            String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  // Relationship with contacts
  contacts          Contact[]

  @@index([state_code])
  @@index([type])
  @@index([name])
}

// Contact model - represents employee contacts
model Contact {
  id                String    @id @default(uuid())
  first_name        String?
  last_name         String?
  email             String
  phone             String?
  title             String?
  email_type        String?
  contact_form_url  String?
  department        String?
  agency_id         String?
  firm_id           String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  // Relationship with agency (optional since data may not match perfectly)
  agency            Agency?   @relation(fields: [agency_id], references: [id], onDelete: SetNull)

  @@index([agency_id])
  @@index([email])
  @@index([last_name])
}

// User model - stores user information from Clerk
model User {
  id              String   @id // Clerk user ID
  email           String   @unique
  first_name      String?
  last_name       String?
  image_url       String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relationship with contact view logs
  contactViewLogs ContactViewLog[]

  @@index([email])
}

// ContactViewLog model - tracks daily contact views per user
model ContactViewLog {
  id         String   @id @default(uuid())
  user_id    String   // Clerk user ID
  viewed_at  DateTime @default(now())
  count      Int      @default(1) // Number of contacts viewed in this action

  // Relationship with user
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id, viewed_at])
  @@index([user_id])
}